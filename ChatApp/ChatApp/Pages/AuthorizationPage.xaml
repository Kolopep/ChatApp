<Page x:Class="ChatApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
        <TextBlock Text="Login" TextAlignment="Center"/>
        <TextBox x:Name="TBLogin" Margin="5"/>
        <TextBlock Text="Password" TextAlignment="Center"/>
        <TextBox x:Name="PBPassword" Margin="5"/>
        <CheckBox x:Name="CBRememberMe" Content="Remember Me" HorizontalAlignment="Center"/>
        <Button x:Name="BAuthorize" Click="BAuthorize_Click" Margin="5" Content="Authorize"/>
        <Button x:Name="BRegistration" Click="BRegistration_Click" Margin="5" Content="Registration"/>
    </StackPanel>
</Page>
