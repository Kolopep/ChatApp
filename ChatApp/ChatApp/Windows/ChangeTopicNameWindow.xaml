<Window x:Class="ChatApp.Windows.ChangeTopicNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Windows"
        mc:Ignorable="d"
        Title="ChangeTopicNameWindow" Height="107" Width="314">
    <StackPanel>
        <TextBlock Text="Topic Name" TextAlignment="Center"/>
        <TextBox Margin="5" x:Name="TBChangeTopicName"/>
        <Button x:Name="BSave" Click="BSave_Click" Content="Save" Margin="5"/>
    </StackPanel>
</Window>
